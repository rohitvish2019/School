-->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

<style>
    h6{
        font-weight: bold;
    }
</style>
<div style="background-color: #435a6a66; color: #1a3a0fd1;">
    <%- include('_header'); %>
    <h1 class="my-3" style="text-align: center;">Submit fee here</h1>
    <div class="d-flex justify-content-around my-4">
        <div style="min-width: 15%;">
            <h6>Name:</h6>
            <h4><%= student.FirstName%> <%= student.LastName%></h4>
        </div>
        <div style="min-width: 15%;">
            <h6>Father's Name:</h6>
            <h4><%= student.FathersName%></h4>
        </div>
        
        <div style="min-width: 15%;">
            <h6>Mother's Name:</h6>
            <h4><%= student.MothersName%></h4>
        </div>
    </div>

    <div class="d-flex justify-content-between my-4 container">
        <div style="min-width: 15%;">
            <h6>Admission No</h6>
            <input id="AdmissionNoFees" type="text" readonly value='<%=student.AdmissionNo%>'>
        </div>
    
        <div style="min-width: 15%;" >
            <button id="check-fees" class="btn btn-success">Check</button>
        </div>
        
    </div>

    <div class="my-3" style="flex-direction: column;" id='fees-details'>
        
    </div>
    <div id="fee-submit-form">
        
    </div>

    <div id="feesHistory">
        <h3 class="container" id="header">
            
        </h3>
        <div id="fee-history-container" class="container">
        </div>
    </div>
 

