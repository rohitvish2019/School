        <h2 style="text-align: center;margin-bottom: 2%;">Result update</h2>
        <div class="container">
            <div class="header1">
                <div>
                    
                    <select id="classSelect">
                    </select>
                    
                    <select id="termSelect">
                        
                    </select>
                    <button id="getSubject">Get Subjects</button>
                    <label style="position: absolute; right: 15%;" id="maxMarks"></label>
                    
                </div>
                <div>
                    <div class="subjects" id="subjects" style="display: inline;">
                        
                    </div>
