<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
<div class="d-flex flex-column justify-content-between" style="min-height: 100vh;">
    <%- include('_header'); %>
    <div class="d-flex justify-content-evenly">
            <div >
                <h6>Admission No</h6>
                <input readonly id="AdmissionNo_result" type="text" name="AdmissionNo" value="<%=student.AdmissionNo%>">
            </div>
            
            <div>
                <h6>Class</h6>
                <h4>
                    <select style="width: 250%;" name="Class" id="class_result">
                        <option style="width: 30%;">1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        <option>6</option>
                        <option>7</option>
                        <option>8</option>
                        <option>kg-1</option>
                        <option>kg-2</option>
                    </select>
                </h4>
            </div>

            <div class="my-4">
                <input class="btn btn-primary" value="Search" id="search_result">
            </div>
        
    </div>    
    <div id="result-record">
        <div class="d-flex container justify-content-around">
            <div>
                <h6>Name : </h6>
                <h4><%=student.FirstName%> <%=student.LastName%></h4>
            </div>
            <div>
                <h6>Father's Name : </h6>
                <h4><%=student.FathersName%></h4>
            </div>
            <div>
                <h6>Mother's Name : </h6>
                <h4><%=student.MothersName%></h4>
            </div>
            <div>
                <h6>Class : </h6>
                <h4><%=student.Class%></h4>
            </div>
        </div>
        <div id="search_record" style="background-color: aqua;">

        </div>
    </div>
</div>
<%- include('_footer'); %>
<script src="/js/result_record.js"></script>