
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
<%- include('_header'); %>
<style>
    label{
        width: 15%;
        min-width: 200px;
        margin-top: 1%;
    }
</style>
<form action="/admissions/create" method="POST">
    <div>
        <label>First Name</label>
        <input required name="FirstName" type="text" placeholder="none">
    </div>
    <div>
        <label >Last Name</label>
        <input required name="LastName" type="text" placeholder="none">
    </div>
    <div>
        <label>Father's Name</label>
        <input name="FathersName" type="text" placeholder="none">
    </div>
    <div>
        <label>Mother's Name</label>
        <input name="MothersName" type="text" placeholder="none">
    </div>
    <div>
        <label>Class</label>
        <select required name="Class" style="width: 14%;">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>kg-1</option>
            <option>kg-2</option>
        </select>
    </div>
    <div>
        <label>Aadhar No</label>
        <input  name="AadharNumber" type="text" placeholder="none">
    </div>
    <div>
        <label>Samagra ID</label>
        <input name="SSSM" type="text" placeholder="none">
    </div>
    <div>
        <label>Mob No</label>
        <input type="text" placeholder="none">
    </div>
    <div>
        <label>Date of Birth</label>
        <input style="width: 14%;" name="DOB" type="date" placeholder="none">
    </div>
    <div>
        <label>Caste</label>
        <input name="Caste" type="text" placeholder="none">
    </div>
    <div class="d-flex align-items-center">
        <label>Address</label>
        <textarea required style="margin-left: 0.33%;" cols="23" rows="3" class="my-2" name="FullAddress"></textarea>
    </div>
    <div>
        <label>Bank Name</label>
        <input name="BankName" type="text" placeholder="none">
    </div>
    <div>
        <label>Branch</label>
        <input name="Branch" type="text" placeholder="none">
    </div>
    <div>
        <label>AccountNo</label>
        <input name="Account No" type="text" placeholder="none">
    </div>
    <div>
        <label>IFSC Code</label>
        <input name="IFSC" type="text" placeholder="none">
    </div>
    <div>
        <input type="submit" value="Submit">
    </div>
</form>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
