<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
<link rel="stylesheet" href="/css/admin_home.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

<body>
    <div class="header-container">
        <%- include('_header'); %>
    </div>
    <div class="body-container">

        <div class="left-side-panel news-container">
            <div class="news-item">
                <h2 class="news-title">Breaking News</h2>
                <p class="news-content">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam eget urna velit.</p>
                <span class="news-date">September 1, 2023</span>
            </div>
            <div class="news-item">
                <h2 class="news-title">New Feature Announcement</h2>
                <p class="news-content">Check out our latest feature that will enhance your experience on our website.</p>
                <span class="news-date">August 28, 2023</span>
            </div>
        </div>


        <div class="center-body">
            <div>
              <img src="/images/flat-header.jpg" width="100%" height="70px" alt="" style="border-radius: 1rem;">
            </div>
            <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active" data-bs-interval="1500">
                    <img style="border-radius: 45%;" src="/carousel-photos/img1.jpg" class="d-block w-100" alt="...">
                  </div>
                  <%for(let i=1;i<files.length;i++){%>
                    <div  class="carousel-item" data-bs-interval="1500">
                        <img style="border-radius: 45%;" height="100%" width="100%" src="/carousel-photos/<%=files[i]%>" class="d-block w-100" alt="...">
                    </div>
                  <%}%>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
        </div>



        <div class="right-side-panel">
            <div class="quick-links">
                <h3>Quick Links</h3>
                <a class="btn btn-primary " href="/registration/new">Registration</a>
                <a class="btn btn-primary" href="/student/showByClass/fee">Fees</a>
                <a class="btn btn-primary" href="/student/showByClass/result">Result</a>
                <a class="btn btn-primary" href="/documents">Documents</a>
            </div>


            <div class="contact-us">
              <h3>Contact Us</h3>
              <form action="">
                <input type="text" name="name" placeholder="Your Name">
                <input type="text" name="email" id="" placeholder="Email (Optional)">
                <input type="text" name="Mobile" placeholder="Mobile">
                <textarea name="purpose" id="" cols="30" rows="3" placeholder="Purpose"></textarea>
                <input type="submit" class="btn btn-success">
              </form>
            </div>
        </div>


    </div>
    <div class="footer-container">
        <%- include('_footer'); %>
    </div>
</body>