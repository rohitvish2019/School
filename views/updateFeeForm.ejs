<!--This page will be rendered whwn user wants to update yearly fees for any class
    Replication:
    Click on update fees on menu in header
-->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
<%- include('_header'); %>
<h1>Update fee here...</h1>
<form action="/fee/updateFee" class="d-flex justify-content-around container my-4" method="POST">
    <div>
        <h6>Class</h6>
        <h4>
            <select style="width: 250%;" name="Class" id="">
                <option style="width: 30%;">1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
                <option>7</option>
                <option>8</option>
                <option>kg-1</option>
                <option>kg-2</option>
            </select>
        </h4>
    </div>

    <div>
        <h6>Amount</h6>
        <input name="Fees" type="number" placeholder="Enter new fees here">
    </div>

    <div>
        <h6>Action</h6>
        <input type="submit" value="Update">
    </div>
    
    
</form>
<%- include('_footer'); %>