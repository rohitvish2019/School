
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/fee_details.css">
</head>
<body>
    <div class="header-container">
        <%- include('_header'); %>
    </div>
    <div class="upper-center">
        <button href="/fee/addOldFees" onclick="openAddFee()" class="btn btn-primary">Add More Fee</button>
        <h3 style="margin-bottom: 1%;">Student Details</h3>
        <div class="student-details-mob">
            <div class="std-item">
                <label for=""><small>Admission No</small></label>
                <label for="" id="AdmissionNoFees"><b><%=student.AdmissionNo%></b></label>
            </div>
            <div class="std-item">
                <label for=""><small>Name</small></label>
                <label for=""><b><%=student.FirstName%> <%=student.LastName%></b></label>
            </div>
            <br>
            <div class="std-item"> 
                <label for=""><small>Class</small></label>
                <label for=""><b><%=student.Class%></b></label>
            </div>
            <br>
            <div class="std-item">
                <label for=""><small>Father's Name</small></label>
                <label for=""><b><%=student.FathersName%></b></label>
            </div>
            <br>
            <div class="std-item">
                <label for=""><small>Mother's Name</small></label>
                <label for=""><b><%=student.MothersName%></b></label>
            </div>
        </div>
    </div>
    <div class="body-container">
        <div class="left-side-panel news-container">
            <button href="/fee/addOldFees" onclick="openAddFee()" class="btn btn-primary">Add More Fees</button>
            <div class="student-details">
                <h3 style="margin-bottom: 10%;">Student Details</h3>
                <div>
                    <label for=""><small>Admission No</small></label>
                    <label for="" id="AdmissionNoFees"><b><%=student.AdmissionNo%></b></label>
                </div>
                <div>
                    <label for=""><small>Name</small></label>
                    <label for=""><b><%=student.FirstName%> <%=student.LastName%></b></label>
                </div>
                <br>
                <div>
                    <label for=""><small>Class</small></label>
                    <label for=""><b><%=student.Class%></b></label>
                </div>
                <br>
                <div>
                    <label for=""><small>Father's Name</small></label>
                    <label for=""><b><%=student.FathersName%></b></label>
                </div>
                <br>
                <div>
                    <label for=""><small>Mother's Name</small></label>
                    <label for=""><b><%=student.MothersName%></b></label>
                </div>
            </div>
        </div>
        <div class="center-body">
            <h3 class="h3-head" style="text-align: center; color: white; font-weight: bolder;">Fees Submission & History</h3>
            <div id="toggler_button" class="toggeler">
                <span style="color: white;" class="fee-details" id="details-button"><h5>Fees Details</h5></span>
                <span class="fee-history" id="history-button-pay"><h5>Payment History</h5></span>
                <span class="fee-history" id="history-button-con"><h5>Concession History</h5></span>
            </div>
            <div id="fee-details" class="details-div">
                <table id="fee-details-container">
                    <tr>
                        <th>Class</th>
                        <th>Type</th>
                        <th>Total</th>
                        <th>Concession</th>
                        <th>Paid</th>
                        <th>Remaining</th>
                        <th>Actions</th>
                    </tr>
                    
                </table>
            </div>

            <div id="fee-history" style="display: none;" class="details-div">
                <table id="fee-history-dynamic-container">
                    <tr style="width: 100%;">
                        <th>Class</th>
                        <th>Amount</th>
                        <th>Payment_Date</th>
                        <th>Comment</th>
                        <th>Actions</th>
                        <th>Paid To</th>
                    </tr>
                </table>
            </div>

            <div id="concession-history" style="display: none;" class="details-div">
                <table id="concession-history-dynamic-container">
                    <tr style="width: 100%;">
                        <th>AdmissionNo</th>
                        <th>Class</th>
                        <th>Amount</th>
                        <th>Concessioon Date</th>
                        <th>Comment</th>
                        <th>Concession By</th>
                    </tr>
                    
                </table>
            </div>
            <div id="popup" style="display: none;">
       
                <button style="background-color: transparent;border: none;" id="close-button"><img id="cross" src="/images/cross.png" alt="" srcset="" height="100%" width="150%"></button>
                <div style="text-align: center; position: relative;">
                    <b>
                        <input id='purpose' style="border: none; background-color: transparent; width: 40%;font-weight: bold;font-size: x-large !important;" type="text" value="Fees pay">
                    </b>   
                </div>
                <div class="form-item">
                    <label>Ad. No</label>
                    <input required readonly id='AdmissionNo_fee' value="<%=feesList[0].AdmissionNo%>">
                </div>
                
                <div class="form-item">
                    <label>Class</label>
                    <input required readonly id="Class_fee" type="text" placeholder="Class">
                </div>
                <div class="form-item">
                    <label for="">Type</label>
                    <input readonly required id="Type_fee" type="text" placeholder="Type">
                </div>
                <div class="form-item">
                    <label for="">Amount</label>
                    <input required id="Amount_fee" type="text" placeholder="Amount">
                </div>
                
                <!--
                <div class="form-item">
                    <label for="">Date</label>
                    <input id="date_fee" type="date" name="" id="">
                </div>
                -->
                <div class="form-item">
                    <label for="">Comment</label>
                    <textarea id="comment_fee" cols="20" rows="2"></textarea>
                </div>
                <div style="display: flex; justify-content: center;">
                    <button class="btn btn-success" id='submit_fee' onclick="submitFeeOrConcession()">Pay</button>
                </div>
            </div>

            <div id="addFeesPopup">
                <button style="background-color: transparent;border: none;" onclick="closeAddFee()" id="close-button"><img id="close_add_fee" src="/images/cross.png" alt="" srcset="" height="100%" width="200%"></button>
                <h5 style="text-align: center;">Add New Fees</h5>
                <div class="addFeeInputs">
                    <input readonly type="text" id="admission_no_add_fee" placeholder="Admission No" value="<%=feesList[0].AdmissionNo%>">
                    <input readonly type="text" id="class_add_fee" value="<%=student.Class%>">
                    <select name="" id="feesType">
                        <option value="">--select fee type--</option>
                        <option value="Old Fees">Old Fees</option>
                        <option value="Admission Fee">Admission Fee</option>
                        <option value="Transport Fee">Transport Fee</option>
                        <option value="Exam Fee">Exam Fee</option>
                        <option value="Extracurricular Activity Fee">Extracurricular Activity Fee</option>
                        <option value="Material and Book Fee">Material and Book Fee</option>
                        <option value="Building and Maintenance Fees">Building and Maintenance Fees</option>
                        <option value="Tuition Fees">Tuition Fees</option>
                    </select>
                    <input type="text" name="" id="period" placeholder="Time Period">
                    <input type="number" id="totalFees_add_fee" placeholder="Total Fees">
                    <button class="btn btn-success" onclick="saveNewFees()">Save</button>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="/js/fees_details.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
