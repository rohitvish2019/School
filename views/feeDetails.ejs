<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
<link rel="stylesheet" href="/css/fee_details.css">

<body>
    <%- include('_header'); %>
    <div class="main-container">
        <div class="sub-container">
            
            <div class="student-details">
                <div>
                    <label for="">Name : </label>
                    <label for=""><%=student.FirstName%> <%=student.LastName%></label>
                </div>
                <div>
                    <label for="">Class : </label>
                    <label for=""><%=student.Class%></label>
                </div>
                <div>
                    <label for="">Father's Name : </label>
                    <label for=""><%=student.FathersName%></label>
                </div>
                <div>
                    <label for="">Mother's Name :</label>
                    <label for=""><%=student.MothersName%></label>
                </div>
            </div>
            <div id="toggler_button" class="toggeler">
                <span class="fee-details" id="details-button"><h5>Fees Details</h5></span>
                <span class="fee-history" id="history-button"><h5>Fees History</h5></span>
            </div>
            <div id="fee-details" class="details-div">
                <table>
                    <tr style="width: 100%;">
                        <th>Class</th>
                        <th>Total</th>
                        <th>Concession</th>
                        <th>Paid</th>
                        <th>Remaining</th>
                        <th colspan="2">Action</th>
                    </tr>
                    <% for(let i=0;i<feesList.length;i++){%>
                        <tr>
                            <td><%=feesList[i].Class%></td>
                            <td><%=feesList[i].Total%></td>
                            <td><%=feesList[i].Concession%></td>
                            <td><%=feesList[i].Paid%></td>
                            <td><%=feesList[i].Remaining%></td>
                            <td><button class='btn btn-success' id='concession_<%=feesList[i].Class%>_<%=feesList[i].AdmissionNo%>' onclick="openPopup('<%=feesList[i].Class%>_<%=feesList[i].AdmissionNo%>_con')">Concession</button></td>
                            <td><button class='btn btn-success' id='pay_<%=feesList[i].Class%>_<%=feesList[i].AdmissionNo%>' onclick="openPopup('<%=feesList[i].Class%>_<%=feesList[i].AdmissionNo%>_submit')">Pay</button></td>
                        </tr>
                    <%}%>
                </table>
            </div>

            <div id="fee-history" style="display: none;" class="details-div">
                <table id="fee-history-dynamic-container">
                    <tr style="width: 100%;">
                        <th>AdmissionNo</th>
                        <th>Class</th>
                        <th>Amount</th>
                        <th>Payment_Date</th>
                        <th>Comment</th>
                    </tr>
                    
                </table>
            </div>
            <div id="popup" style="display: none;">
       
                <div  id="close-button"><img id="cross" src="/images/cross.png" alt="" srcset="" height="10%" width="10%"></div>
                <div style="text-align: center; position: relative; left: 15%;">
                    <b>
                        <input id='purpose' style="border: none; background-color: transparent;" type="text" value="Fees pay">
                    </b>   
                </div>
                <div class="form-item">
                    <label>Ad. No</label>
                    <input required readonly id='AdmissionNo_fee' value="<%=feesList[0].AdmissionNo%>">
                </div>
                
                <div class="form-item">
                    <label>Class</label>
                    <select id="Class_fee" style="width: 25%;">
                        <%for (let i=0;i<feesList.length;i++){%>
                            <option class="class_option" id="<%=feesList[i].Class%>" value="<%=feesList[i].Class%>"><%=feesList[i].Class%></option>
                        <%}%>
                    </select>
                </div>
                <div class="form-item">
                    <label for="">Amount</label>
                    <input required id="Amount_fee" type="text" placeholder="Amount">
                </div>
                <div class="form-item">
                    <label for="">Date</label>
                    <input required id="date_fee" type="date" name="" id="">
                </div>
                <div class="form-item">
                    <label for="">Comment</label>
                    <textarea id="comment_fee" cols="20" rows="2"></textarea>
                </div>
                <div style="display: flex; justify-content: center;">
                    <button id='submit_fee' onclick="submitFeeOrConcession()">Pay</button>
                </div>
                    
                
            </div>
        </div>
    </div>
    
</body>
<script src="/js/fees_details.js"></script>